<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sidebyside3.david.com.sidebyside4.Main">

    <TextView
        android:id="@+id/dailyPhotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="No photo  taken today"
        android:textColor="@color/magenta"
        android:textSize="35sp"
        android:layout_marginTop="0dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <View
            android:id="@+id/topCenter"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/setting"
            android:text="50 photos in Folder"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/settingLabel"
            android:layout_toLeftOf="@+id/topCenter"
            android:background="@drawable/setting"
            android:backgroundTint="@color/blue" />

        <TextView
            android:id="@+id/settingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/setting"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/setting"
            android:gravity="center"
            android:text="Setting"
            android:textColor="@color/blue"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cameraLabel"
            android:layout_toRightOf="@+id/topCenter"
            android:background="@drawable/camera"
            android:backgroundTint="@color/blue" />

        <TextView
            android:id="@+id/cameraLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/camera"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/camera"
            android:gravity="center"
            android:text="Camera"
            android:textColor="@color/blue"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="-10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <View
            android:id="@+id/bottomCenter"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/bottomCenter"
            android:background="@drawable/edit"
            android:backgroundTint="@color/blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edit"
            android:layout_alignRight="@+id/edit"
            android:layout_below="@+id/edit"
            android:gravity="center"
            android:text="Edit"
            android:textColor="@color/blue"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/compare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/bottomCenter"
            android:layout_toRightOf="@+id/bottomCenter"
            android:background="@drawable/compare"
            android:backgroundTint="@color/blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/compare"
            android:layout_alignRight="@+id/compare"
            android:layout_below="@+id/compare"
            android:gravity="center"
            android:text="Compare"
            android:textColor="@color/blue"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/help"
            android:backgroundTint="@color/blue" />
    </RelativeLayout>

</LinearLayout>
