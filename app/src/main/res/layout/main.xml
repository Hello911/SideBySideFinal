<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sidebyside3.david.com.sidebyside4.Main"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:text="No photo  taken today"
    android:textColor="@color/magenta"
    android:textSize="30sp"
    android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/folder"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="50 photos in Folder"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>
    <RelativeLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">
        <View
            android:id="@+id/topCenter"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"/>
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/setting"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/topCenter"
            android:backgroundTint="@color/blue"/>
        <ImageView
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/camera"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/topCenter"
            android:backgroundTint="@color/blue"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <RelativeLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">
        <View
            android:id="@+id/bottomCenter"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/bottomCenter"
            android:backgroundTint="@color/blue"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/compare"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/bottomCenter"
            android:backgroundTint="@color/blue"/>
    </RelativeLayout>

</LinearLayout>
